# Frontend Environment Variables
# Copy this file to .env.local for local development

# API Base URL - Backend server endpoint
# Development: http://localhost:3000
# Production: Your deployed backend URL (e.g., https://bettify-api.onrender.com)
VITE_API_URL=http://localhost:3000

# WebSocket URL - For real-time communication
# Development: ws://localhost:3000
# Production: Use wss:// for secure WebSocket (e.g., wss://bettify-api.onrender.com)
VITE_WS_URL=ws://localhost:3000

# Chain ID - Ethereum network
# 84532 = Base Sepolia Testnet
# 8453 = Base Mainnet
VITE_CHAIN_ID=84532

# Smart Contract Address - YellowPredictionRegistry
VITE_REGISTRY_ADDRESS=0x615807920BEA0751AbE4682f18b55C0e1BaA0112

# WalletConnect Project ID (Optional - for WalletConnect v2)
VITE_WALLETCONNECT_PROJECT_ID=
